# Production Environment Variables
# For production deployment - ensure all secrets are properly secured

# =============================================================================
# Production Application Configuration
# =============================================================================

# Environment
APP_ENV=production
DEBUG=false
LOG_LEVEL=WARNING

# Security (CHANGE THESE IN PRODUCTION)
SECRET_KEY=your-super-secret-production-key-here
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Database Configuration (Production)
POSTGRES_DB=bci_compression_prod
POSTGRES_USER=bci_prod_user
POSTGRES_PASSWORD=secure-production-password
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
DATABASE_URL=postgresql://bci_prod_user:secure-production-password@your-postgres-host:5432/bci_compression_prod

# Redis Configuration (Production)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=secure-redis-password
REDIS_DB=0
REDIS_URL=redis://:secure-redis-password@your-redis-host:6379/0

# Object Storage (Production)
S3_BUCKET=your-production-bucket
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_ENDPOINT_URL=https://s3.amazonaws.com

# Performance Settings (Production)
MAX_WORKERS=8
WORKER_TIMEOUT=300
ENABLE_GPU=true
CUDA_VISIBLE_DEVICES=0,1

# Monitoring (Production)
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOG_AGGREGATION_ENDPOINT=your-log-endpoint

# Neural Data Processing (Production)
DEFAULT_SAMPLING_RATE=30000
MAX_CHANNELS=1024
CHUNK_SIZE=2000
ENABLE_STREAMING=true

# EMG Data Processing (Production)
EMG_SAMPLING_RATE=2000
EMG_MAX_CHANNELS=32
EMG_CHUNK_SIZE=1000
EMG_ENABLE_REAL_TIME=true

# Security Headers
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_CONTENT_TYPE_NOSNIFF=true

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
